<%= turbo_frame_tag :new_post do %>
  <div class="max-w-2xl w-full rounded-lg">
    <%= form_with model: @post do |f| %>
      <div class="flex flex-col">
        <%= f.label :caption %>
        <%= f.text_field :caption %>
      </div>
      
      <div class="flex flex-col">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>

      <br/>

      <%= f.submit class: "bg-blue-500 text-blue-100 rounded-lg px-3 py-2" %>
    <% end %>
  </div>
<% end %>