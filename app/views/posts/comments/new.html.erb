<%= turbo_frame_tag dom_id(@post, :comments) do %>
  <%= form_with model: [@post, @comment] do |f| %>
    <div class="flex flex-col">
      <%= f.label :body %>
      <%= f.text_area :body, autofocus: true %>
    </div>
    <br/>
    <div class="flex items-center gap-4">
      <%= f.submit class: "bg-blue-500 text-blue-100 rounded-lg p-2 cursor-pointer" %>
      or
      <%= link_to "Cancel", root_path, class: "text-gray-700" %>
    </div>
  <% end %>
<% end %>